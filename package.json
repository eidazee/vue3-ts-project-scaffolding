{
	"name": "vue3-ts-project-scaffolding",
	"version": "0.0.3",
	"private": true,
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check lint lint-style build-only",
		"preview": "vite preview",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"lint-style": "stylelint **/*.{css,less,scss,vue} --fix --ignore-path .gitignore",
		"stylelint-check": "stylelint-config-prettier-check",
		"prepare": "husky install"
	},
	"dependencies": {
		"pinia": "^2.0.26",
		"vue": "^3.2.45",
		"vue-router": "^4.1.6"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.1.4",
		"@types/node": "^18.11.11",
		"@vitejs/plugin-vue": "^3.2.0",
		"@vue/eslint-config-prettier": "^7.0.0",
		"@vue/eslint-config-typescript": "^11.0.0",
		"@vue/tsconfig": "^0.1.3",
		"eslint": "^8.22.0",
		"eslint-plugin-vue": "^9.3.0",
		"husky": "^8.0.0",
		"less": "^4.1.3",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"postcss-less": "^6.0.0",
		"postcss-preset-env": "^7.8.3",
		"prettier": "^2.8.1",
		"stylelint": "^14.16.0",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-property-sort-order-smacss": "^9.0.0",
		"stylelint-config-recommended-less": "^1.0.4",
		"stylelint-config-standard": "^29.0.0",
		"stylelint-config-standard-vue": "^1.0.0",
		"stylelint-less": "^1.0.6",
		"stylelint-order": "^5.0.0",
		"stylelint-prettier": "^2.0.0",
		"typescript": "^4.9.3",
		"vite": "^3.2.5",
		"vue-tsc": "^1.0.9"
	},
	"lint-staged": {
		"*.{json,md,html}": [
			"prettier --write"
		],
		"*.{css,less,scss,vue}": [
			"npm run lint-style",
			"prettier --write"
		],
		"*.{js,ts,jsx,tsx,cjs,mjs,cts,mts,vue}": [
			"vue-tsc --noEmit --allowJs",
			"npm run lint",
			"prettier --write"
		]
	}
}
